[Unit]
Description=Transmission Docker
After=docker.service
Require=docker.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker stop btServer
ExecStartPre=-/usr/bin/docker rm btServer
ExecStart=/usr/bin/docker run -d -p 9091:9091 --name btServer -v /mnt/WD_RAID1_RED_3T/Downloads/Completed:/transmission/download -v /mnt/WD_RAID1_RED_3T/Downloads/Incomplete:/transmission/incomplete -v /mnt/WD_RAID1_RED_3T/Downloads/Torrents:/transmission/watch -v /mnt/WD_RAID1_RED_3T/Downloads/.config:/transmission/config mnhan32/transmission:1.3
ExecStop=/usr/bin/docker stop btServer
ExecStopPost=/usr/bin/docker rm btServer

[Install]
WantedBy=multi-user.target
